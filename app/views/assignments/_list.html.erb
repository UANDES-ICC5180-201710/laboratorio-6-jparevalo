<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Statement</th>
      <th>Grades</th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.statement %></td>
        <td>
          <%= link_to 'Grades', course_assignment_grades_path(assignment_id: assignment.id, course_id: @course.id) %>
        </td>
        <td><%= link_to 'Show', [@course, assignment] %></td>
        <td>
          <%= link_to 'Edit', edit_course_assignment_path(id: assignment.id, course_id: @course.id) %>
        </td>
        <td><%= link_to 'Destroy', [@course, assignment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
